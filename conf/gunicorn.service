[Unit]
Description=django-twitch
After=network.target

[Service]
PIDFile=/var/run/django-twitch.pid
User=apache
Group=apache
WorkingDirectory=/websites/django-twitch
ExecStart=/websites/django-twitch/venv/bin/gunicorn django_twitch.wsgi:application --workers 2 -b 127.0.0.1:8000 --log-file /websites/django-twitch/gunicorn.log
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
